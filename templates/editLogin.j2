<html>
<head>
    <title>Edit User</title>
</head>
<body>
    <div>
        <!-- Display the current user's details in a table -->
        <table border="1" cellpadding="5"> 
            <caption> Update User: </caption>
            {% if Users %}
            <thead>
                <tr>
                    {% for key in Users[0].keys() %}
                    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for item in Users %}
                <tr>
                    {% for key in item.keys() %}
                    <td>{{ item[key] }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
            {% endif %}
        </table>

        <!-- Form to edit the selected user's data -->
        <div id="edit">
            <form id="editPerson" action="/edit_Login/{{ Users[0]['user_id'] }}" method="POST">
                <legend><strong>Edit User</strong></legend>
                <fieldset>
                    <!-- Hidden input to include user ID -->
                    <input type="hidden" value="{{ Users[0]['user_id'] }}" id="userID" name="userID" required>

                    <!-- Email Field -->
                    <label for="email">Email</label>
                    <input type="email" value="{{ Users[0]['email'] }}" id="email" name="email"
                           pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" placeholder="Enter new email" required>

                    <!-- Username Field -->
                    <label for="username">Username</label>
                    <input type="text" value="{{ Users[0]['username'] }}" id="username" name="username"
                           pattern="[A-Za-z0-9]{1,}" placeholder="Enter new username" required>
                </fieldset>

                <!-- Submit and Cancel Buttons -->
                <input type="submit" value="Save Changes" class="btn btn-primary" style="margin:.5rem;">
                <a href="/Logins"><input class="btn" type="button" value="Cancel"></a>
            </form>
        </div>
    </div>
</body>
</html>
