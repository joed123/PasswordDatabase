<h1>Logins</h1>

[ <a href="/">Home</a> | <a href="Categories">Categories</a> | <a href="History">History</a> | <a href="Generate">Generate Random Password</a> ] 
<div id="browse" style="display: block">
<p><strong>Browse All Logins</strong></p>
<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for username...">
<table border="1" cellpadding="7" >
<thead>
<tr>
    <!-- Iterate through each key in the first entry to get the
    column name -->
    {% for key in Users[0].keys() %}

    <!-- Create a <th> tag with the key inside of it, this will be
    our header row -->
    <th>{{ key }}</th>

    <!-- End of this for loop -->
    {% endfor %}
    <th>Edit</th>
    <th>Delete</th>
</tr>
<tbody>

<!-- Now, iterate through every person in bsg_people -->
{% for person in Users %}
<tr>
    <!-- Then iterate through every key in the current person dictionary -->
    {% for key in person.keys() %}

    <!-- Create a <td> element with the value of that key in it -->
    <td>{{person[key]}}</td>
    {% endfor %}
        <td><a href="#">Edit</a></td>
    <td><a href="#">Delete</a></td>
</tr>
{% endfor %}
</table>

<p>&nbsp;</p>
</div> <!-- browse -->
<div id="insert" style="display: block">
    <form id="addLogin" action="/Logins" method ="post">
        <legend><strong>Add Login</strong></legend>
          <fieldset class="fields">
            <label> Email </label> <input type="text" class="form-control" id="email" name="email" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" placeholder="" required>
            <label> Username </label> <input type="text" class="form-control" id="username" name="username" pattern="[A-Za-z]{1,}" placeholder="" required>
          </fieldset>
          <input class="btn" type="submit" name="add_User" id="addUser" value="Add Login">
          <input class="btn" type="button" value="Cancel">
	</form> <!--add login-->
</div><!-- insert -->

<div id="edit" style="display: block">
  <form id="editLogin" action="/edit_Login/{{Users[0}.user_id}" method ="post">
      <legend><strong>Edit Login</strong></legend>
          <fieldset class="fields">
				    <input type="hidden" value="{{Users[0].user_id}}" class="form-control" id="user_id" name="user_id" required>
            <label> Email </label> <input type="text" class="form-control" id="email" name ="email" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" placeholder="{{Users[0].email}}" required>
            <label> Username </label> <input type="text" class="form-control" id="username" name="username" pattern="[A-Za-z]{1,}" placeholder={{Users[0].username}} required>
    </fieldset>


</div><!-- SEARCH -->
<div id="search" style="display: block">
  <form id="searchLogin">
      <legend><strong>Search Login</strong></legend>
          <fieldset class="fields">
            <label>Username</label> <input type="text" value="BestProgrammer123" readonly>
    </fieldset>
    <input class="btn" type="submit" id="SearchLogin" value="Search">
          <input class="btn" type="button" value="Cancel" >
  </form>

</div><!-- search -->

<div id="delete" style="display: block">
  <form id="deleteLogin">
      <legend><strong>Delete Login</strong></legend>
    <fieldset class="fields">
          <p>Are you sure you wish to delete the following login?</p>
          <label>ID:</label> 102
          <label>Website: </label> www.myplate.gov
            <label>Username: </label> WatermelonMango
            <label>Email: </label> WhatEvenIsFruit@mail.com 
    </fieldset>
    <input class="btn" type="submit" id="Delete" value="Delete">
    <input class="btn" type="button" value="Cancel" >
  </form> 
</body>
</html>
