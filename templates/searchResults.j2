<!DOCTYPE html>
<html>
<head>
    <link href="{{ url_for('static', filename='style.css') }}" rel="stylesheet" type="text/css" />
    <title>Search Results</title>
</head>
<body>
    <h1>Search Results</h1>
    
    {% if results %}
    <table border="1" cellpadding="7">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Email</th>
                <th>Username</th>
                <th>Last Login Date</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for user in results %}
            <tr>
                <td>{{ user.user_id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.last_login_date or 'N/A' }}</td>
                <td><a href="/edit_Login/{{ user.user_id }}">Edit</a></td>
                <td><a href="/delete_Login/{{ user.user_id }}">Delete</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>{{ message }}</p>
    {% endif %}
    
    <a href="/search_Login"><input class="btn" type="button" value="Search Again"></a>
    <a href="/Logins"><input class="btn" type="button" value="Back to Logins"></a>
</body>
</html>
