<!DOCTYPE html>
<html>
<head>
  <link href="{{ url_for('static', filename='style.css') }}" rel="stylesheet" type="text/css">
  <title>Logins</title>
</head>
<body>
  <header>
    <h1>Logins</h1>
    <nav>
      <a href="/">Generate Random Password</a>
      <a href="/Categories">Categories</a>
    </nav>
  </header>

  <!-- Browse Section -->
  <div id="browse">
    <p><strong>Browse All Logins</strong></p>
    <table border="1" cellpadding="7">
      <thead>
        <tr>
          {% for key in Users[0].keys() %}
            <th>{{ key }}</th>
          {% endfor %}
        </tr>
      </thead>
      <tbody>
        {% for person in Users %}
        <tr>
          {% for key in person.keys() %}
            <td>{{ person[key] }}</td>
          {% endfor %}
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <!-- Add Login Section -->
  <div id="insert">
    <form id="addLogin" action="/Logins" method="POST">
      <legend><strong>Add Login</strong></legend>
      <fieldset>
        <label>Email</label>
        <input type="text" id="email" name="email" placeholder="Enter email" required>

        <label>Username</label>
        <input type="text" id="username" name="username" placeholder="Enter username" required>
      </fieldset>
      <input type="submit" name="add_User" value="Add Login">
      <input type="button" value="Cancel" onclick="window.location.href='/Logins'">
    </form>
  </div>

  <!-- Search Login Section -->
  <div id="search">
    <form id="searchLogin" action="/search_Login" method="POST">
      <legend><strong>Search Login</strong></legend>
      <fieldset>
        <label>Username</label>
        <input type="text" name="username" placeholder="Enter username to search" required>
      </fieldset>
      <input type="submit" id="SearchLogin" value="Search">
      <input type="button" value="Cancel" onclick="window.location.href='/Logins'">
    </form>
  </div>

  <!-- Delete Login Section -->
  <div id="delete">
    <form id="deleteLogin" action="/delete_Login" method="POST">
      <legend><strong>Delete Login</strong></legend>
      <fieldset>
        <label>Username</label>
        <input type="text" name="username" placeholder="Enter username to delete" required>
      </fieldset>
      <input type="submit" value="Delete">
      <input type="button" value="Cancel" onclick="window.location.href='/Logins'">
    </form>
  </div>
</body>
</html>
